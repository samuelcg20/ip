<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<!-- Improved layout and styling for Sai chatbot UI (done by ChatGPT) -->
<AnchorPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="600.0"
        prefWidth="400.0"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="duke.MainWindow">
    <children>
        <!-- User input field -->
        <TextField
                fx:id="userInput"
                layoutY="558.0"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="324.0"
                AnchorPane.bottomAnchor="1.0"
                style="-fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-padding: 5px;" />

        <!-- Send button -->
        <Button fx:id="sendButton"
                layoutX="324.0"
                layoutY="558.0"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />

        <!-- Scrollable chat area -->
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    fitToWidth="true"
                    prefHeight="557.0"
                    prefWidth="400.0"
                    vvalue="1.0"
                    style="-fx-background-color: #eaeaea; -fx-border-color: #ccc;">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="552.0"
                      prefWidth="388.0"
                      spacing="10"
                style="-fx-background-color: #ffffff;"
                >
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/> <!-- padding inside chat area -->
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>


